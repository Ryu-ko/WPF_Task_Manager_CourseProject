<Window x:Class="MizuFlow.AttachWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MizuFlow"
        mc:Ignorable="d" Icon="/resources/icon/Im.png"
        x:Name="wd_Attach" Title="{DynamicResource _AttachWindow}" Height="450" Width="600" WindowStartupLocation="CenterOwner">
    
    <Grid x:Name="gd_ShowStatistics">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="51*"/>
            <ColumnDefinition Width="542*"/>
        </Grid.ColumnDefinitions>
        
        <Image x:Name="img_ShowImage" Grid.ColumnSpan="2" Margin="0,0,-0.4,0"/>
        
        <RichTextBox x:Name="rtb_ShowText" Grid.ColumnSpan="2" Margin="0,0,-0.4,0"/>
    
    </Grid>
    
</Window>
